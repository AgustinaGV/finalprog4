---
import { Tick } from "@components/ui/icons";
import Link from "@components/ui/link.astro";
import { Picture } from "astro:assets";

const { proyect } = Astro.props;
---

<div>
  <div
    class="flex flex-col w-full order-first lg:order-none border-2 border-[#D8DEE9] border-opacity-50 py-5 px-6 rounded-md">
    <div class="text-center">
      <h4 class="text-lg font-medium text-gray-400">{proyect.category}</h4><p
        class="mt-3 text-4xl font-bold text-black md:text-4xl">
        {
          proyect.proyectTitle && typeof proyect.proyectTitle === "object"
            ? proyect.proyectTitle
            : proyect.proyectTitle
        }
      </p>
      <img src={proyect.image.src} alt={proyect.image.alt}>
      <!-- {
        proyect.proyectTitle.original && (
          <p class="mt-1 text-xl font-medium text-gray-400 line-through md:text-2xl">
            {proyect.proyectTitle.original}
          </p>
        )
      } -->
    </div><ul class="grid mt-8 text-left gap-y-4">
      {
        proyect.features.map((item) => (
          <li class="flex items-start gap-3 text-gray-800">
            <span>{item}</span>
          </li>
        ))
      }
    </ul><div class="flex mt-8">
      <Link
        href={proyect.button.link || "#"}
        block
        style={proyect.popular ? "primary" : "outline"}>
        {proyect.button.text || "Ver m√°s"}
      </Link>
    </div>
  </div>
</div>

---
import Container from "@components/container.astro";
import Layout from "@layouts/Layout.astro";
import { Image } from "astro:assets";

import michael from "@assets/img/michael-scott.jpg";

---

<Layout title="404 Not Found">
  <Container>
    <div class="min-h-[calc(100vh-16rem)] items-center justify-center grid">
      <div class="mt-16 text-center">
        <h1 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">404</h1>
        <p class="text-lg mt-4 text-slate-600">Algo no funciona :(</p>
      </div>

      <div class="">
        <Image src={michael} alt="my picture" width="500" class="object-scale-down h-480">
      </div>

    </div>
  </Container>
</Layout>
